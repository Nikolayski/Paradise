@model AddContactViewModel;
@{
    ViewData["Title"] = "Contact";
}

<div class="hero-wrap" style="background-image: url('https://www.sparklight.com/-/media/project/sparklight/sparklight/contactus/contact-us-banner-small.jpg?h=600&w=800&la=en&hash=550F385FAF9BB4359154855FDC822FE5'); ">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text d-flex align-itemd-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center d-flex align-items-end justify-content-center">
                <div class="text">
                    <h1 class="mb-4 bread">Contact Us</h1>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<hr />
<hr />

@if (TempData["Success"] != null)
{
    <div class="container">
        <div class="row">
            <div class="alert alert-warning alert-dismissible fade show col-md-12" role="alert">
                <strong>Your message was successfully sent!</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
    </div>
}

<section class="ftco-section contact-section bg-light">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 mb-4">
                <h2 class="h3">Contact Information</h2>
            </div>
            <div class="w-100"></div>
            <div class="col-md-3 d-flex">
                <div class="info rounded bg-white p-4">
                    <p><span>Address:</span>Canary islands.Home office Bulgaria</p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info rounded bg-white p-4">
                    <p><span>Phone:</span> <a href="">+359 888 7777777</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info rounded bg-white p-4">
                    <p><span>Email:</span> <a href="">paradise@gmail.com</a></p>
                </div>
            </div>
            <div class="col-md-3 d-flex">
                <div class="info rounded bg-white p-4">
                    <p><span>Website</span> <a href="/">paradise.azurewebsites.net</a></p>
                </div>
            </div>
        </div>
        <div class="row block-9">
            <div class="col-md-7 order-md-last d-flex">
                <form method="post" class="form-group">
                    <div>
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Subject" class="control-label"></label>
                        <input asp-for="Subject" class="form-control" />
                        <span asp-validation-for="Subject" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Message" class="control-label"></label>
                        <textarea asp-for="Message" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Message" class="text-danger"></span>
                    </div>
                    <hr />
                    <div>
                        <button type="submit" class="btn btn-success">Send</button>
                    </div>
                </form>
            </div>
            <div class="col-md-5 d-flex">
                <div id="map" class="bg-white"></div>
            </div>
        </div>
    </div>
</section>


