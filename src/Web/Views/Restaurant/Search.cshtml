@model IEnumerable<ProductsAllViewModel>


@{
    ViewData["Title"] = "Search";
    this.Layout = "_LayoutRestaurant";
}


<section id="shop">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div>
                    <form action="/Restaurant/Search" method="get">
                        <input type="text" name="name" />
                        <button type="submit">Search</button>
                    </form>
                </div>	<!-- End of /.Products-heading -->
                <div class="product-grid">
                    <ul>
                        @foreach (var product in this.Model)
                        {

                            <li>
                                <div class="products">
                                    <a href="/Products/Articles?id=@product.Id">
                                        <img src="@product.Image" alt="">
                                    </a>
                                    <a href="#">
                                        <h4>@product.Name</h4>
                                    </a>
                                    <p class="price">£@product.Price</p>
                                    <div>
                                        <a class="view-link shutter" href="#">
                                            <i class="fa fa-plus-circle"></i>Add To Card
                                        </a>
                                    </div>
                                </div>	<!-- End of /.products -->
                            </li>

                            <!--  ... -->

                        }
                    </ul>
                </div>	<!-- End of /.products-grid -->
                <!-- Pagination -->

                <div class="pagination-bottom">
                    <ul class="pagination">
                        <li class="disabled"><a href="#">&laquo;</a></li>
                        <li class="active"><a href="#">1 <span class="sr-only"></span></a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">»</a></li>
                    </ul>	<!-- End of /.pagination -->
                </div>
            </div>	<!-- End of /.col-md-9 -->
            <div class="col-md-3">
                <div class="blog-sidebar">
                    <div class="block">
                        <h4>Categories</h4>
                        <div class="list-group">
                            <a asp-controller="Restaurant" asp-action="Italian" class="list-group-item">
                                <i class="fa  fa-dot-circle-o"></i>
                                Italian Foods
                            </a>
                            <a asp-controller="Restaurant" asp-action="Traditional" class="list-group-item">
                                <i class="fa  fa-dot-circle-o"></i>
                                Traditional Food
                            </a>
                            <a asp-controller="Restaurant" asp-action="Italian" class="list-group-item">
                                <i class="fa  fa-dot-circle-o"></i>
                                Indian Food
                            </a>
                            <a asp-controller="Restaurant" asp-action="Spanish" class="list-group-item">
                                <i class="fa  fa-dot-circle-o"></i>
                                Spanish Food
                            </a>
                            <a asp-controller="Restaurant" asp-action="Bulgarian" class="list-group-item">
                                <i class="fa  fa-dot-circle-o"></i>
                                Bulgarian Food
                            </a>
                        </div>
                    </div>
                    <div class="block">
                        <img src="~/images/food-ad.png" alt="">
                    </div>
                    <div class="block">
                        <h4>Food Suggestions</h4>
                        <ul class="media-list">
                        <vc:random-products></vc:random-products>
                         
                        </ul>
                    </div>

                    
                </div>	<!-- End of /.col-md-3 -->

            </div>	<!-- End of /.row -->
        </div>	<!-- End of /.container -->
        </div>
</section>	<!-- End of Section -->
