@model UserOrderViewModel

@{
    this.Layout = "_LayoutRestaurant";
    this.ViewData["Title"] = "Order";
}

<div class="container">
    <div class="row">
       <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <span class="badge badge-secondary badge-pill">3</span>
            </h4>
            <ul class="list-group mb-3 sticky-top">
                @foreach (var product in this.Model.Products)
                {
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">@product.Name</h6>
                            <img src="@product.Image" width="50" height="30" />
                            <strong>$@product.Price</strong>
                        </div>
                    </li>
                }
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>$@this.Model.TotalSum</strong>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Billing address</h4>
            <form asp-controller="Restaurant" asp-action="Order" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">First name</label>
                        <input type="text" class="form-control" id="firstName" placeholder="First Name"  name="firstName" value="@this.Model.FirstName" required="">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="lastName">Last name</label>
                        <input type="text" class="form-control" id="lastName" placeholder="Last Name"  name="lastName" value="@this.Model.LastName" required="">
                    </div>
                </div><br />
                <div class="mb-3">
                    <label for="email">Email: </label>
                    <strong>@this.Model.UserName</strong>
                </div><br />
                <div class="mb-3">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" placeholder="Address" name="address" required="" value="@this.Model.Address">
                </div>
                <div class="mb-3">
                    <div class="mb-3">
                        <label for="address">Phone</label>
                        <input type="text" class="form-control" id="Phone" required="" placeholder="Phone Number" name="phoneNumber" value="@this.Model.PhoneNumber">
                    </div>
                    <hr>
                    <hr>
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Done</button>
                </div>
            </form>
        </div>
    </div>
</div>
<hr style="height:100px">