@model SingleProductViewModel

@{
    ViewData["Title"] = "Product";
    this.Layout = "_LayoutRestaurant";
}

<section id="single-product">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="single-product-img">
                    <img src="@this.Model.Image" alt="" width="280" height="240">
                </div>
            </div> 
            <div class="col-md-4">
                <div class="block">
                    <div class="product-des">
                        <h4>@this.Model.Name</h4>
                        <p class="price">$@this.Model.Price</p>
                        <p>@this.Model.Description</p>

                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <form method="post" action="/Carts/AddFromDetails">
                                <input type="hidden" name="productId" value="@this.Model.Id" />
                                <button class="btn btn-success" type="submit">Add to Cart</button>
                            </form>
                        }
                    </div>	
                </div> 
            </div>
            <div class="col-md-3">
                <div class="blog-sidebar">
                    <div class="block">
                        <h4 class="top-catagori-heading">Food Suggestions</h4>
                        <ul class="media-list">

                            <vc:random-products></vc:random-products>

                        </ul>	
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
