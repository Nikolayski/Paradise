@{ 
    this.ViewData["Title"] = "Home";
}

<div class="hero">
    <section class="home-slider owl-carousel">

        <vc:index-images></vc:index-images>

    </section>
</div>
      
<section>
 <div class="container  bg-info">
        <div class="row no-gutters no-gutters">
            <div class="col-md-12">
                <form class="form-group" method="post" asp-controller="Rooms" asp-action="Check">
                    <div class="row">
                        <div class="form-control col-md-3">
                            <input id="checkin_date" type="text" name="checkIn" class="checkin_date" placeholder="Check-in-date">
                        </div>
                        <div class="form-control col-md-3">
                            <input id="checkout_date" type="text" name="checkOut" class="checkout_date" placeholder="Check-out-date">
                        </div>

                        <div class="form-control col-md-2">
                            <label for="adults">Adults:</label>
                            <select name="adults" id="adults">
                                <option value="1">1 Adult</option>
                                <option value="2">2 Adult</option>
                                <option value="3">3 Adult</option>
                                <option value="4">4 Adult</option>
                            </select>
                        </div>
                        <div class="form-control col-md-3">
                            <label for="roomType">Room</label>
                            <select name="roomType" id="roomType">
                                <option value="all">All</option>
                                <option value="single">Single Room</option>
                                <option value="double">Double Room</option>
                                <option value="tripple">Tripple Room</option>
                                <option value="family">Family Room</option>
                                <option value="luxury">Luxury Room</option>
                                <option value="superior">Superior Room</option>
                            </select>
                        </div>
                        <div class="form-control col-md-1">
                            <button type="submit" class="btn btn-info">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


