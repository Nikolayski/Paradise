            <div class="col-md-9">
                <div>
                    <form asp-controller="Restaurant" asp-action="Search" method="get">
                        <input type="text" name="name" />
                        <button type="submit">Search</button>
                    </form>
                </div>	<!-- End of /.Products-heading -->
                <div class="product-grid">
                    <hr />
                    <hr />
                    <hr />
                    @if (this.Model.Products.Count == 0)
                    {
                        <div class="row">
                            <h1>My Cart is Empty...</h1>
                        </div>
                    }

                    <ul>

                        @foreach (var product in this.Model.Products)
                        {

                            <li>
                                <div class="products">
                                    <a href="/Restaurant/Product?id=@product.Id">
                                        <img src="@product.Image" alt="">
                                    </a>
                                    <a href="#">
                                        <h4>@product.Name</h4>
                                    </a>
                                    <p class="price">£@product.Price</p>
                                    <div>

                                        <form method="post" action="/Carts/Remove">
                                            <input type="hidden" name="productId" value="@product.Id" />
                                            <button type="submit">Remove</button>
                                        </form>

                                    </div>
                                </div>	<!-- End of /.products -->
                            </li>

                            <!--  ... -->

                        }
                    </ul>
                </div>	<!-- End of /.products-grid -->
                <!-- Pagination -->

                @if (this.Model.TotalPrice != 0)
                {
                    <div class="container">
                        <div class="row">
                            <div class="col-md-4 col-md-offset-4">
                                <h3>$@this.Model.TotalPrice <a class="btn btn-info" asp-controller="Restaurant" asp-action="Order">Order</a></h3>

                            </div>
                        </div>
                    </div>
                }





              
